<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Welcome to fazbook</h1>
    <a href="/users/new">Create a new user<!-- <button>Create a new user</button> --></a>
    <% users.forEach(function(user) { %>
      <div>
        <span><%= user.firstName %></span>
        <span><%= user.lastName %></span>
        <span><%= user.email %></span>
        <span><%= user.dob %></span>
        <form action="<%= '/users/' + user.id + '?_method=DELETE' %>" method="POST">
          <button type="submit" value="X">Delete</button>
        </form>
      </div>
  <%  }) %>
  </body>
</html>
